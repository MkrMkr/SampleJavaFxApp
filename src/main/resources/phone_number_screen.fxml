<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="anchor"
            fx:id="anchorPane"
            style="-fx-background-image: url(splashscreen_bg.jpg); -fx-background-size: 100% 100%;"
            xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="PhoneNumberController">
    <children>
        <Button id="red" fx:id="continueButton" layoutX="68.0" layoutY="647.0" mnemonicParsing="false" onAction="#continueButtonClick" prefHeight="25.0" prefWidth="265.0" stylesheets="@red_button_style.css" text="Continue"
                AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" />
        <TextField layoutX="50.0" layoutY="519.0" maxWidth="380.0" prefHeight="30.0" prefWidth="349.0" promptText="Country"
