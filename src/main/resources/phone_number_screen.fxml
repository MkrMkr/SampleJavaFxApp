        <TextField layoutX="50.0" layoutY="562.0" maxWidth="346.0" prefHeight="25.0" prefWidth="346.0" promptText="Number without country code"
                   AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" />
        <ImageView fx:id="logoImageView" fitHeight="150.0" fitWidth="200.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@cheers_logo.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
